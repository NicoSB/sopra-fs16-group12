<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentLobby"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".activities.LobbyActivity">

    <!--android:src="@drawable/background_lobby"-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView10"

        android:scaleType="centerCrop"
        android:src="@drawable/default_background" />

    <LinearLayout tools:context=".activities.LobbyActivity"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:padding="50dp"
                android:gravity="center_horizontal">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/fragment_lobby_user_list"
                android:layout_weight="1"
                android:headerDividersEnabled="false" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="Start"
                        android:id="@+id/fragment_lobby_start_game"
                        android:background="@drawable/wood_button"
                        android:layout_gravity="center"
                        android:alpha="0.5"
                        android:textColor="#000000"
                        android:clickable="false"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="Leave"
                        android:id="@+id/fragment_lobby_leave_game"
                        android:background="@drawable/wood_button"
                        android:layout_gravity="center"
                        android:textColor="#000000" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:layout_weight="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/fragment_lobby_belle"
                    android:layout_weight="1"
                    android:src="@drawable/ccard_belle"
                    android:clickable="true"
                    android:nestedScrollingEnabled="false"
                    android:layout_margin="5dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/fragment_lobby_cheyenne"
                    android:layout_weight="1"
                    android:src="@drawable/ccard_cheyenne"
                    android:clickable="true"
                    android:layout_margin="5dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/fragment_lobby_django"
                    android:layout_weight="1"
                    android:src="@drawable/ccard_django"
                    android:clickable="true"
                    android:layout_margin="5dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/fragment_lobby_doc"
                    android:layout_weight="1"
                    android:src="@drawable/ccard_doc"
                    android:clickable="true"
                    android:layout_margin="5dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/fragment_lobby_ghost"
                    android:layout_weight="1"
                    android:src="@drawable/ccard_ghost"
                    android:clickable="true"
                    android:layout_margin="5dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/fragment_lobby_tuco"
                    android:layout_weight="1"
                    android:src="@drawable/ccard_tuco"
                    android:clickable="true"
                    android:layout_margin="5dp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</FrameLayout>