<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="550dp"
    android:layout_height="312dp"
    android:id="@+id/dialog_choose_item"
    android:gravity="center">

    <ImageView
        android:layout_width="550dp"
        android:layout_height="312dp"
        android:id="@+id/imageView19"
        android:src="@drawable/dialog_background1"
        android:scaleType="fitXY" />

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="550dp"
            android:layout_height="312dp"
            android:gravity="center">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select item to toss"
                android:id="@+id/textView"
                android:textColor="#000000"
                android:textSize="25sp"
                android:paddingBottom="20dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_choose_item_bag">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageView13"
                    android:src="@drawable/item_bag"
                    android:adjustViewBounds="true"
                    android:maxHeight="50dp"
                    android:maxWidth="50dp"
                    android:padding="5dp" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_choose_item_gem"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageView14"
                    android:src="@drawable/item_gem"
                    android:adjustViewBounds="true"
                    android:maxHeight="50dp"
                    android:maxWidth="50dp"
                    android:padding="5dp" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_choose_item_case">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageView15"
                    android:src="@drawable/item_case"
                    android:adjustViewBounds="true"
                    android:maxHeight="50dp"
                    android:maxWidth="50dp"
                    android:padding="5dp" />

            </FrameLayout>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>