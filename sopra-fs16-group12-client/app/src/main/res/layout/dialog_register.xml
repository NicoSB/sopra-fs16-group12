<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="550dp"
        android:layout_height="312dp"
        android:id="@+id/dialog_register_image"
        android:src="@drawable/dialog_background1"
        android:adjustViewBounds="true"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="16dp"
            android:text="Choose your username"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textIsSelectable="false" />

        <EditText
            android:id="@+id/dialog_register_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="16dp"
            android:inputType="textCapWords"
            android:textColor="#000000" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="15dp">

            <Button
                android:layout_width="100dp"
                android:layout_height="42dp"
                android:text="Register"
                android:id="@+id/dialog_register_register_button"
                android:background="@drawable/wood_button"
                android:layout_marginRight="60dp"
                android:textColor="#000000" />

            <Button
                android:layout_width="100dp"
                android:layout_height="42dp"
                android:text="Cancel"
                android:id="@+id/dialog_register_cancel_button"
                android:background="@drawable/wood_button"
                android:textColor="#000000" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>