<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_joinlobby"
    android:orientation="vertical"
    android:layout_width="550dp"
    android:layout_height="437dp"
    tools:context=".activities.MenuActivity">

    <ImageView
        android:layout_width="550dp"
        android:layout_height="437dp"
        android:id="@+id/imageView18"
        android:src="@drawable/dialog_background2"
        android:scaleType="fitXY" />

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal">

        <ListView
                android:layout_width="550dp"
                android:layout_height="330dp"
                android:id="@+id/dialog_joinlobby_list"
                android:choiceMode="singleChoice"
                android:listSelector="#88000000"
                android:paddingLeft="30dp"
                android:paddingTop="30dp"
                android:paddingRight="30dp"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|center_horizontal"
                android:paddingBottom="40dp"
                >

            <Button
                android:layout_width="100dp"
                android:layout_height="42dp"
                android:text="Join"
                android:id="@+id/dialog_join_lobby_join"
                android:background="@drawable/wood_button"
                android:textColor="#000000" />

            <Button
                android:layout_width="100dp"
                android:layout_height="42dp"
                android:text="Refresh"
                android:id="@+id/dialog_join_lobby_refresh"
                android:background="@drawable/wood_button"
                android:textColor="#000000"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp" />

            <Button
                android:layout_width="100dp"
                android:layout_height="42dp"
                android:text="Cancel"
                android:id="@+id/dialog_join_lobby_cancel"
                android:background="@drawable/wood_button"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>