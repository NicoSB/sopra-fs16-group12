<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical"
             android:layout_width="550dp"
             android:layout_height="437dp">

    <ImageView
            android:layout_width="550dp"
            android:layout_height="437dp"
            android:id="@+id/imageView20"
            android:src="@drawable/dialog_background2"
            android:scaleType="fitXY"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="550dp"
            android:layout_height="437dp"
            android:gravity="bottom">

        <ListView
                android:layout_width="match_parent"
                android:layout_height="352dp"
                android:id="@+id/dialog_scoreboard_list"
                android:paddingLeft="30dp"
                android:paddingTop="30dp"
                android:paddingRight="30dp"
                android:paddingBottom="30dp"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="top|center_horizontal"
                >

            <Button
                    android:layout_width="100dp"
                    android:layout_height="42dp"
                    android:text="Done"
                    android:id="@+id/dialog_scoreboard_button_done"
                    android:background="@drawable/wood_button"
                    android:layout_marginRight="60dp"
                    android:textColor="#000000"
                    android:textSize="15sp"/>

            <Button
                    android:layout_width="100dp"
                    android:layout_height="42dp"
                    android:text="Leave Game"
                    android:id="@+id/dialog_scoreboard_button_leave"
                    android:background="@drawable/wood_button"
                    android:textColor="#000000"
                    android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>