<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ch.uzh.ifi.seal.soprafs16.group_12_android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-sdk
            android:targetSdkVersion="23"
            android:minSdkVersion="16"/>
    <application
            android:largeHeap="true"
            android:icon="@drawable/kappa"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen">
        <activity
                android:name="ch.uzh.ifi.seal.soprafs16.group_12_android.activities.MenuActivity"
                android:label="@string/app_name"
                android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
                android:name="ch.uzh.ifi.seal.soprafs16.group_12_android.activities.LobbyActivity"
                android:label="@string/app_name"
                android:screenOrientation="landscape">
        </activity>

        <activity
                android:name="ch.uzh.ifi.seal.soprafs16.group_12_android.activities.GameActivity"
                android:label="@string/app_name"
                android:screenOrientation="landscape">
        </activity>
    </application>
</manifest>
